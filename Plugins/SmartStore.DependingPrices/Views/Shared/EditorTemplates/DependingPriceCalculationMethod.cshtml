@using SmartStore.DependingPrices.Domain

<select name="CalculationMethod" id="CalculationMethod" class="form-control">
	<option value="@((int)DependingPriceCalculationMethod.Fixed)">@T("Admin.Product.Price.Tierprices.Fixed")</option>
	<option value="@((int)DependingPriceCalculationMethod.Adjustment)">@T("Admin.Product.Price.Tierprices.Adjustment")</option>
	<option value="@((int)DependingPriceCalculationMethod.Percental)">@T("Admin.Product.Price.Tierprices.Percental")</option>
</select>

<script>
    $(function () {
		$('#CalculationMethod').selectWrapper();
    });
</script>
